{% if (tree|length) %}
<ul>
    {% for node in tree %}
        <li>
            {{ widget('blog.comment.view', {'blogComment' : node.item, 'template' : 'view'}) }}
            {{ widget('blog.comment.add.addForm', {'blogPost' : node.item.post, 'blogComment' : node.item, 'template' : 'addSubComment'}) }}
            {{ include('tree.twig', {'tree' : node.children}) }}
        </li>
    {% endfor %}
</ul>
{% endif %}